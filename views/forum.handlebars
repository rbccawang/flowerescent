<div class="content">
    <h1>Forum</h1>
    <h3>Messages</h3>
    <div id="mes-container">
        {{#each Mdata}}
            {{> message}}
        {{/each}}
        <div class="scrolling"></div>
    </div>
    <div class="text-entry">
        <p>Message</p>
        <textarea id="message"></textarea>
        <p>Author</p>
        <input id="author">
        <button class="button" id="messagebtn">Message</button>
        <div id="warning">Please fill out all fields!</div>
    </div>
</div>